<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000ffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainCard"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0000ffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLayer"
        app:layout_constraintRight_toRightOf="parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#0000ffff"
        android:outlineSpotShadowColor="#0000ffff"
        app:cardCornerRadius="15dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poemtitle"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="hello world"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/poemtxt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/poemtitle"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Sevdim degan so`zingni asra,\nMeni kutgan ko`zingni asra,\nSeni topgum, yoningga borgum,\nMen uchun ham o`zingni asra.\n"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomLayer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:outlineSpotShadowColor="#0000ffff"
            android:outlineAmbientShadowColor="#0000ffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/likeLogo"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/msgLogo">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/msglogo"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:outlineSpotShadowColor="#0000ffff"
            android:outlineAmbientShadowColor="#0000ffff"
            app:layout_constraintLeft_toRightOf="@id/msgLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="15dp"
            app:layout_constraintRight_toLeftOf="@id/shareLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/likeLogo">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:id="@+id/likeBtn"
                android:layout_height="20dp"
                android:src="@drawable/likelogo"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:outlineSpotShadowColor="#0000ffff"
            android:outlineAmbientShadowColor="#0000ffff"
            app:layout_constraintLeft_toRightOf="@id/likeLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="15dp"
            app:layout_constraintRight_toLeftOf="@id/copyLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/shareLogo">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/sharelogo"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:outlineSpotShadowColor="#0000ffff"
            android:outlineAmbientShadowColor="#0000ffff"
            app:layout_constraintLeft_toRightOf="@id/shareLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/copyLogo">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/copylogo"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>